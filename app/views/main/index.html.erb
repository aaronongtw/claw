
<div class="pure-g">
    <div class="pure-u-1-1">



    
        <% if @current_user.present? && session[:user_id] %>
        <div id="gameSelector" class="pure-g game-table">
  <% Game.all.each do |g| %>
  <div id=<%=g.name.split(' ')[0]%> class="pure-u-1 pure-u-md-1-4 gameSelect"> <h1 class="gameTitle"><%= g.name %></h1> </div>
  <% end %>
</div>


<div id="gameBox"></div><div id="dropBox">X</div>
        <% else %>
        <div class="login-page">
          <form for="/login" method="POST" class="pure-form pure-form-stacked">
            <fieldset>
              <div class="pure-"
              <label for="email"></label>
              <input id="email" type="email" name="email" class="pure-input-rounded" placeholder="email" autofocus="true">

              <label for="password"></label>
              <input id="password" type="password" name="password" class="pure-input-rounded" placeholder="password">

              <button type="submit" class="pure-button pure-button-primary">sign in</button>
            </fieldset>
          </form>
          </div>
        <% end %>


    </div> <!-- PureCSS pure-u-1-1 -->
  </div> <!-- PureCSS pure-g -->










