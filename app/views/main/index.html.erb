
<div class="pure-g">
    <div class="pure-u-1-1">

    
        <% if @current_user.present? %>
        <div id="gameSelector" class="pure-g game-table">
  <% Game.all.each do |g| %>
  <div id=<%=g.name.split(' ')[0]%> class="pure-u-1 pure-u-md-1-4 gameSelect"> <h1 class="gameTitle"><%= g.name %></h1> </div>
  <% end %>
</div>


<div id="gameBox"></div><div id="dropBox"></div>
        <% else %>

        <div class="login-page">
          <%= form_tag '/login', class: 'pure-form pure-form-stacked' do %>
            <fieldset>
              <div class="pure-">
                <%= label_tag 'email' %>
                <%= email_field_tag 'email', nil, class: 'pure-input-rounded',
                 placeholder: 'email', autofocus: 'true'%>
                
                <%= label_tag 'password' %>
                <%= password_field_tag 'password', nil, class: 'pure-input-rounded',
                 placeholder: 'password'%>

                <%= submit_tag 'Login', class: 'pure-button pure-button-primary' %>
              
            <fieldset>

          <% end %>
        </div>


        <% end %>


    </div> <!-- PureCSS pure-u-1-1 -->
  </div> <!-- PureCSS pure-g -->










