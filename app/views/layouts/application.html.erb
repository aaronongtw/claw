<!DOCTYPE html>
<html>
  <head>
    <title>ClawOfNoms</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/1.16.1/TweenMax.min.js"></script>
</head>

<body>

  <script>
  window.fbAsyncInit = function() {
      FB.init({
        appId      : '1413649252297564',
        xfbml      : true,
        version    : 'v2.3'
      });
    };

    (function(d, s, id){
       var js, fjs = d.getElementsByTagName(s)[0];
       if (d.getElementById(id)) {return;}
       js = d.createElement(s); js.id = id;
       js.src = "//connect.facebook.net/en_US/sdk.js";
       fjs.parentNode.insertBefore(js, fjs);
     }(document, 'script', 'facebook-jssdk'));
  </script>


  <div id="#clawTop" class="pure-menu pure-menu-horizontal">
    <a href="/" class="pure-menu-heading">Claw of Noms</a>
    <ul class="pure-menu-list">

      <%== smart_nav %>

    </ul>
  </div>
  
  <div id="clawString"></div>
  <div id="theClaw"></div>

      <%= yield %>

  <div class="gameController footer" >
      <% if @current_user.present? %>
      <div id="redeemDisplay" class="footerL">

      <h5> <%= @current_user.vouchers.where.not(client_id: Client.where(:name=> "Claw of Noms")[0].id).length %> 
      </h5>
      </div>

      <div id="coinDisplay" class="footerL">
        <h5 id="coinForUser" class="tlt"><%= pluralize(@current_user.coins, 'coin') %></h5>
      </div>

      <h2 id="redeemText">Push to play the CLAW!</h2>
      <h1 id="moveClawGrab" class="clawButtons footerL">0</h1>
    
      <% end %>
    
  </div>

</body>

  <%if @current_user.present? %>
  <script type='text/javascript'>
      var CoinCap = <%= @current_user.coins %>
      var GMID = <%= Client.where(:name=> "Claw of Noms")[0].id %>
    </script>
  <% end %>

</html>

