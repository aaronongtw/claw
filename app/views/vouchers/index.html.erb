<p id="notice"><%= notice %></p>

<h1>Listing Vouchers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Expiry</th>
      <th>Client</th>
      <th>Textstuff</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vouchers.each do |voucher| %>
      <tr>
        <td><%= voucher.name %></td>
        <td><%= voucher.description %></td>
        <td><%= voucher.expiry %></td>
        <td><%= voucher.client_id %></td>
        <td><%= voucher.textstuff %></td>
        <td><%= voucher.user_id %></td>
        <td><%= link_to 'Show', voucher %></td>
        <td><%= link_to 'Edit', edit_voucher_path(voucher) %></td>
        <td><%= link_to 'Destroy', voucher, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

